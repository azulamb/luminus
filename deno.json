{
	"tasks": {
		"build": "tsc -p ./src",
		"server": "deno run --allow-read --allow-net --allow-env https://raw.githubusercontent.com/azulamb/minirachne/main/server.ts"
	},
	"lint": {
		"files": {
			"include": ["./src"]
		},
		"rules": {
		  "tags": ["recommended"],
		  "include": [],
		  "exclude": ["require-await"]
		}
	},
	"fmt": {
		"files": {
			"include": ["./src"]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"lineWidth": 160,
			"singleQuote": true
		}
	}
}
