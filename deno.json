{
	"tasks": {
		"build": "tsc -p ./src",
		"server": "file_server docs"
	},
	"lint": {
		"files": {
			"include": ["./src"]
		},
		"rules": {
		  "tags": ["recommended"],
		  "include": [],
		  "exclude": ["require-await"]
		}
	},
	"fmt": {
		"files": {
			"include": ["./src"],
			"exclude": ["./src/Luminus/Matrix.ts", "./src/Luminus/Support.ts"]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"lineWidth": 160,
			"singleQuote": true
		}
	}
}
